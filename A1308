SELECT 
    P.ID_INCIDENTE,
    P.ES_INCIDENTE,
    P.DE_TITULO,
    B.NO_USUARIO,
    D.NO_ROL AS NOMBRE_ROL,
    C.ID_TAREA 
FROM SIO_TM_INCIDENTE P
LEFT JOIN SIO_TM_TAREA C ON P.ID_INCIDENTE = C.ID_INCIDENTE
LEFT JOIN SIO_TM_USUARIO B ON P.ID_USUARIO = B.ID_USUARIO
LEFT JOIN SIO_TM_ROL D ON B.ID_ROL = D.ID_ROL
WHERE P.ES_INCIDENTE = 'A'
  AND P.ID_INCIDENTE NOT IN (
      SELECT DISTINCT ID_INCIDENTE
      FROM SIO_TM_TAREA
      WHERE ID_INCIDENTE IS NOT NULL
  )
